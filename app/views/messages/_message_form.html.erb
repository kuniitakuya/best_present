<%= form_with model: @message, url: [wish_list, message], local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="m-auto mb-4 space-y-8">
    <div class="w-full max-w-xs m-auto">
      <div class="mb-2 ">
        <%= f.label :select_item %>
      </div>
      <%= f.collection_select :select_item, @item, :item_name, :item_name, {prompt: "商品を選択してください"}, class: "select select-bordered w-full max-w-xs bg-white" %>
    </div>
    <div class="w-full max-w-xs m-auto">
      <div class="mb-2">
        <%= f.label :text %>
      </div>
      <%= f.text_area :text, class: "textarea textarea-bordered textarea-md w-full max-w-xs  bg-white" %>
    </div>
    <div class="text-center">
      <%= f.submit t('defaults.list.create'), class: "btn btn-primary btn-md text-red-100 my-6" %>
    </div>
  </div>
<% end %>