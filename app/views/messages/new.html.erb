<% content_for(:title, t('.title')) %>
<div class="my-16 w-96 text-primary-content m-auto">
  <div class="mb-14 text-2xl text-center font-semibold">
    <h1><%= t('.title') %></h1>
  </div>
  <%= form_with model: @message, url: mypage_path, local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="m-auto mb-4 space-y-8">
      <div class="w-full max-w-xs m-auto">
        <div class="mb-2 ">
          <%= f.label :item_id %>
        </div>
        <%= f.collection_select :item_id, @item, :id, :item_name, {prompt: "商品を選択してください"}, class: "select select-bordered w-full max-w-xs bg-white" %>
      </div>

      <div class="w-full max-w-xs m-auto">
        <div class="mb-2">
          <%= f.label :message_image %>
        </div>
        <%= f.file_field :message_image, class: 'file-input file-input-bordered file-input-primary w-full max-w-xs  bg-white', accept: 'image/*' %>
        <%= f.hidden_field :message_image_cache %>
      </div>

      <div class="w-full max-w-xs m-auto">
        <div class="mb-2">
          <%= f.label :text %>
        </div>
        <%= f.text_area :text, class: "textarea textarea-bordered textarea-md w-full max-w-xs  bg-white" %>
      </div>

      <div class="text-center">
        <%= f.submit t('.create'), class: "btn btn-primary btn-md text-red-100 my-6" %>
      </div>
    </div>
  <% end %>
</div>