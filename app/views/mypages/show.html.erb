<% content_for(:title, t('.title')) %>
  <h1 class="text-2xl text-center font-semibold my-8"><%= t('.title') %></h1>
  <div class="flex flex-wrap flex-row w-full border-opacity-50">
    <div class="flex-initial mx-8 basis-1/3">
      <%= image_tag current_user.avatar.url, size: '50x50' %>
    </div>
    <div class="flex-initial basis-1/3">
      <%= current_user.name %>
      <%= current_user.email %>
    </div>
    <div class="flex-initial basis-1/3">
      <%= link_to t('defaults.edit'), edit_mypage_path, class: 'btn btn-accent' %>
    </div>
  </div>
</div>
