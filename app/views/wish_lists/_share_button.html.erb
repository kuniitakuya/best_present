      <%= image_tag "twitter.png", :size => '24x24' %>
      <p class="ml-4"><%= t('defaults.share') %></p>
    </button>
  <% end %>
  <%= link_to "https://social-plugins.line.me/lineit/share?text=#{current_user.name}さんの欲しいものリスト【#{@wish_list.list_name}】です！%0aプレゼントを選択してメッセージを送ってあげよう。%0a&url=${url}", target: :_blank, rel: "noopener noreferrer" do %>
    <button class="btn btn-success">
      <%= image_tag "line.png", :size => '24x24' %>
      <p class="ml-4"><%= t('defaults.share') %></p>
    </button>
  <% end %>
</div>