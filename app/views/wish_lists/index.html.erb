<% content_for(:title, t('.title')) %>
<div class="my-16 pb-8">
  <div class="mb-16 text-2xl text-center font-semibold">
    <h1><%= t('.title') %></h1>
  </div>
  <!-- 検索フォーム -->
  <div class="form-control mb-10">
    <div class="input-group flex justify-center">
      <input type="text" placeholder="Search…" class="input input-bordered" />
      <button class="btn btn-square">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
      </button>
    </div>
  </div>
  <div class="text-center rounded-lg">
    <%= link_to t('.create'), new_wish_list_path, class: "btn btn-primary text-red-100" %>
  </div>


  <!-- 欲しいものリスト一覧 -->
  <div class="flex flex-wrap justify-evenly">
    <% if @wish_lists.present? %>
      <%= render @wish_lists %>
    <% else %>
      <p><%= t('.no_result') %></p>
    <% end %>
  </div>
  <div class="pb-8">
    <% if @wish_lists.present? %>
      <%= paginate @wish_lists %>
    <% end %>
  </div>
</div>